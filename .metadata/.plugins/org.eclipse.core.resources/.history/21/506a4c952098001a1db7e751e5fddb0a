//**********************************************************contacts************************************

	@Given("^user is already On Login Page$")
    public void user_already_on_login_page(){
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Abdul Rajik shaik\\Desktop\\Abdul\\Chromedriver\\chromedriver.exe");
	driver=new ChromeDriver();
	driver.manage().window().maximize();
	System.out.println("***********launch chrome browser*********************************");
	driver.get("https://ui.freecrm.com/");
	}
	
	
	@When("^title of Login Page is FREE CRM$")
	public void  title_of_login_pageis_freecrm()
	{
		String expected="Cogmento CRM";
		String title=driver.getTitle();
		System.out.println("the title of page is "+title);
        Assert.assertEquals(expected, title);
	
	}
	
	@Then("^user enters login \"([^\"]*)\"and \"([^\"]*)\"$")
	public void user_enters_login_and(String username, String password)  {
		
		driver.findElement(By.name("email")).sendKeys(username);
		driver.findElement(By.name("password")).sendKeys(password);
		 System.out.println("*********************Entered username and password****************");
	}

	@Then("^User click on login button$")
	public void user_click_on_login_button()  {
		
		 WebElement loginBtn=driver.findElement(By.xpath("//div[@class='ui fluid large blue submit button']"));
		   JavascriptExecutor js=((JavascriptExecutor)driver);
		   js.executeScript("arguments[0].click();", loginBtn);
		   System.out.println("**************clicked on login button**********************");
	   
	}
	

	

	@Then("^User is on Home page$")
	public void user_is_on_Home_page() throws Throwable {
	   String titleofuser=driver.getTitle();
	   System.out.println("******************the title is *****************************"+titleofuser);
	}

	
	@Then("^user navigate to contacts link and click on it$")
	public void user_navigate_to_contacts_link_and_click_on_it()  {
		WebDriverWait wait=new WebDriverWait(driver, 15);
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("//span[contains(text(),'Contacts')]")));
	    driver.findElement(By.xpath("//span[contains(text(),'Contacts')]")).click();
	    System.out.println("*******************clicked on contacts links***************");
	}
	
	@Then("^user create new contact page$")
	public void user_create_new_contact_page() {
		
		WebDriverWait wait2=new WebDriverWait(driver, 15);
		wait2.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("//button[contains(text(),'New')]")));
	    driver.findElement(By.xpath("//button[contains(text(),'New')]")).click();
	    System.out.println("*******************clicked on new  contacts links to create a contact ***************");
	   
	}
	
	@Then("^user enters \"([^\"]*)\" and \"([^\"]*)\" and click on save$")
	public void user_enters_and_and_click_on_save(String firstname, String lastname) {
	   driver.findElement(By.name("first_name")).sendKeys(firstname);
	   System.out.println("********entered first name*********"+firstname);
	   driver.findElement(By.name("last_name")).sendKeys(lastname);
	   System.out.println("********entered last name*********"+lastname);
	   driver.findElement(By.xpath("//button[@class='ui linkedin button']")).click();
	   System.out.println("************click on save button***********");
	}
	
	@Then("^close the browser$")
	public void close_the_browser() {
	   System.out.println("***********before closeing browser*********");
	   driver.quit();
	   System.out.println("*************browser closed********");
	}


	
	
	

	
	
	
	
	
	
	
	
	
	
	
	
	
}
