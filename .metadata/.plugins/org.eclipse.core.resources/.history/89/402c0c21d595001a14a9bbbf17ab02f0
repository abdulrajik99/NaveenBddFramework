package Stepdefinitions;

import java.util.concurrent.TimeUnit;

import org.openqa.selenium.By;
import org.openqa.selenium.JavascriptExecutor;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.chrome.ChromeDriver;
import org.openqa.selenium.support.ui.ExpectedConditions;
import org.openqa.selenium.support.ui.WebDriverWait;

import cucumber.api.java.en.And;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;
import junit.framework.Assert;

public class CampaignStepDefinition {

	public static WebDriver driver;
	public static JavascriptExecutor js;
	@Given("^user is already on homepage$")
	public void user_is_already_on_homepage(){
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Abdul Rajik shaik\\Desktop\\Abdul\\Chromedriver\\chromedriver.exe");
		driver=new ChromeDriver();
		driver.manage().window().maximize();
		System.out.println("***********launch chrome browser*********************************");
		driver.get("https://ui.freecrm.com/");
		  driver.findElement(By.name("email")).sendKeys("abdulrajik5@gmail.com");
		  driver.findElement(By.name("password")).sendKeys("Crm@123456");
		  System.out.println("*********************Entered username and password****************");
		  WebElement loginBtn=driver.findElement(By.xpath("//div[@class='ui fluid large blue submit button']"));
		  js=((JavascriptExecutor)driver);
		   js.executeScript("arguments[0].click();", loginBtn);
		   System.out.println("**************clicked on login button**********************");
	}
	
	@When("^user click on Campaigns link$") 
	public void user_click_on_Campaigns_link() throws InterruptedException{
//		WebElement camp=  driver.findElement(By.xpath("//span[contains(text(),'Campaigns')]"));
		WebDriverWait wait=new WebDriverWait(driver, 15);
		wait.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("//span[contains(text(),'Campaigns')]")));
         driver.findElement(By.xpath("//span[contains(text(),'Campaigns')]")).click();
		System.out.println("***clicked on campaign ********************");
		String campurl=driver.getCurrentUrl();
		System.out.println("*************************campaign *******"+campurl);
		String exp="https://ui.freecrm.com/campaigns";
		Assert.assertEquals(exp, campurl);
		
	}
	
	@Then("^user click on New campaign button$")
	public  void user_click_on_New_campaign_button(){
		driver.findElement(By.xpath("//button[@class='ui linkedin button' and text()='New']")).click();
		String expnew="https://ui.freecrm.com/campaigns/new";
		String actualnew=driver.getCurrentUrl();
		System.out.println("*********click on new campaign button **************");
		Assert.assertEquals(expnew, actualnew);
	}

	@Then("^user enters campaign name$")
	public void user_enters_campaign_name(){
		driver.manage().timeouts().implicitlyWait(5, TimeUnit.SECONDS);
		driver.findElement(By.name("name")).sendKeys("Abdul");
		System.out.println("******entered name in campaign*****************");
	}

	@Then("^user clicks on save button$")
	public void user_clicks_on_save_button(){
		WebElement saveBtn=driver.findElement(By.xpath("//button[@class='ui linkedin button']"));
		js.executeScript("arguments[0].click();",saveBtn);
		System.out.println("******************click on save button*****************");
	}
	
	@Then("^verify campaign is created$")
	public void verify_campaign_is_created(){
		WebDriverWait wait1=new WebDriverWait(driver, 15);
		wait1.until(ExpectedConditions.visibilityOfElementLocated(By.xpath("//span[contains(text(),'Campaigns')]")));
        driver.findElement(By.xpath("//span[contains(text(),'Campaigns')]")).click();	
       String username=		  driver.findElement(By.xpath("//td[contains(text(),'Abdul')]")).getText();
	    System.out.println("****user name*************"+username);
	    
	
	}
	

}
