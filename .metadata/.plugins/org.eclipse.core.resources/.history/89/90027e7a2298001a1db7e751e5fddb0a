package Stepdefinitions;

import java.util.List;

import org.openqa.selenium.By;
import org.openqa.selenium.WebDriver;
import org.openqa.selenium.chrome.ChromeDriver;

import cucumber.api.DataTable;
import cucumber.api.java.en.Given;
import cucumber.api.java.en.Then;
import cucumber.api.java.en.When;
import junit.framework.Assert;

public class DealsstepDefinition {
	
	public static WebDriver driver;

	
	@Given("^user is already On Login Page$")
    public void user_already_on_login_page(){
		System.setProperty("webdriver.chrome.driver", "C:\\Users\\Abdul Rajik shaik\\Desktop\\Abdul\\Chromedriver\\chromedriver.exe");
	driver=new ChromeDriver();
	driver.manage().window().maximize();
	System.out.println("***********launch chrome browser*********************************");
	driver.get("https://ui.freecrm.com/");
	}
	
	@When("^title of Login Page is FREE CRM$")
	public void  title_of_login_pageis_freecrm()
	{
		String expected="Cogmento CRM";
		String title=driver.getTitle();
		System.out.println("the title of page is "+title);
        Assert.assertEquals(expected, title);
	
	}
	
	@Then("^user enters login usernameand password$")
	public void user_enters_login_username_and_password(DataTable credentials)  {
		List<List<String>> data=credentials.raw();
		driver.findElement(By.name("email")).sendKeys(data.get(0).get(0));
		driver.findElement(By.name("password")).sendKeys(data.get(0).get(1));
		 System.out.println("*********************Entered username and password****************");
	}
	
	

}
